extends layout

block content
    h1.title.edit(contenteditable)= page.title

    div.tags
        h2.label.label-success
            i.icon-tags 
            | &nbsp;Tags
        div.edit(contenteditable)= page.tags.join(", ")

    #content.content.editable(contenteditable)
        != page.content

block pagemeta
    mixin fileDropper
    mixin attachments(page.attachments)
